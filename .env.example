# ===========================================
# MAGNUS Intelligence Alert Generator
# Environment Variables Configuration
# ===========================================
# Copy this file to .env and fill in your values

# -------------------------------------------
# VERCEL FRONTEND (set in Vercel dashboard)
# -------------------------------------------
# Required: Your Supabase project ID (the subdomain before .supabase.co)
VITE_SUPABASE_PROJECT_ID=your-supabase-project-id

# Required: Your Supabase anon/public key (read-only public key)
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# -------------------------------------------
# SUPABASE EDGE FUNCTION SECRETS
# (set in Supabase Dashboard → Edge Functions → Secrets)
# -------------------------------------------

# === REQUIRED: Supabase Connection ===
# Your Supabase project URL
SUPABASE_URL=https://your-supabase-project-id.supabase.co

# Your Supabase service role key (keep SECRET - never expose in frontend)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# === REQUIRED: AI Services ===
# OpenAI API key for alert generation and processing
OPENAI_API_KEY=sk-your-openai-api-key

# Brave Search API key for web content fetching (paid version)
BRAVRE_SEARCH_API_KEY=your-bravre-search-api-key

# === REQUIRED: Security Secrets ===
# Generate with: openssl rand -hex 32
# Used for admin endpoint protection
ADMIN_SECRET=your-random-32-char-admin-secret

# Used for cron job protection
CRON_SECRET=your-random-32-char-cron-secret

# === REQUIRED: Feature Flags ===
# Enable AI-powered alert extraction
AI_ENABLED=true

# Enable scour functionality (alert generation)
SCOUR_ENABLED=true

# === OPTIONAL: Access Control ===
# Comma-separated list of emails allowed to use scour
# Example: user1@example.com,user2@example.com
# Leave empty to allow all authenticated users
SCOUR_ALLOWED_EMAILS=

# === OPTIONAL: Rate Limits ===
# Maximum daily AI processing requests
AI_DAILY_LIMIT=50

# Maximum daily scour runs
SCOUR_DAILY_LIMIT=30

# Days of historical data to process during scour
AI_DAYS_BACK=14

# === OPTIONAL: WordPress Integration ===
# Your WordPress site URL (for publishing alerts)
WP_URL=https://your-wordpress-site.com

# WordPress username for API access
WP_USER=wordpress_username

# WordPress application password (16-char format with spaces)
WP_APP_PASSWORD=xxxx xxxx xxxx xxxx

# === OPTIONAL: Auto Scour ===
# Enable automatic scour jobs via cron
AUTO_SCOUR_ENABLED=false

# === OPTIONAL: Mapbox Integration ===
# Mapbox access token for GeoJSON modal map functionality
# Get from: https://account.mapbox.com/access-tokens/
VITE_MAPBOX_ACCESS_TOKEN=pk.your-mapbox-access-token-here
